<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/black_border"
    android:orientation="vertical"
    android:padding="5dp">

    <TextView
        android:id="@+id/tvDialogTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBlue"
        android:gravity="center_horizontal"
        android:text="@string/DialogTitle"
        android:textColor="@color/colorWhite"
        android:textSize="24sp" />

    <LinearLayout
        android:id="@+id/linkAsFavorite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:background="@drawable/dialog_button_effect">

        <ImageView
            android:id="@+id/ivFavorite"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:scaleType="centerInside"
            android:src="@mipmap/favorite_icon"
            tools:ignore="ContentDescription"/>

        <TextView
            android:id="@+id/tvFavorite"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:gravity="bottom"
            android:text="@string/Favorite"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linkGetPermalink"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:background="@drawable/dialog_button_effect">

        <ImageView
            android:id="@+id/ivPermalink"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:scaleType="centerInside"
            android:src="@mipmap/permalink_icon"
            tools:ignore="ContentDescription"/>

        <TextView
            android:id="@+id/tvPermalink"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:gravity="bottom"
            android:text="@string/Permalink"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linkDelete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:background="@drawable/dialog_button_effect">

        <ImageView
            android:id="@+id/ivDelete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:scaleType="centerInside"
            android:src="@mipmap/delete_icon"
            tools:ignore="ContentDescription"/>

        <TextView
            android:id="@+id/tvDelete"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:gravity="bottom"
            android:text="@string/Delete"
            android:textSize="20sp" />
    </LinearLayout>
</LinearLayout>
